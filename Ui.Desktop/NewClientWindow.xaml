<Window x:Class="De.HsFlensburg.ClientApp049.Ui.Desktop.NewClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:De.HsFlensburg.ClientApp049.Ui.Desktop"
        xmlns:viewModels="clr-namespace:De.HsFlensburg.ClientApp049.Logic.Ui.ViewModels;assembly=Logic.Ui"
        mc:Ignorable="d"
        Title="NewClientWindow" Height="200" Width="400">
    <Window.Resources>
    </Window.Resources>
    <Window.DataContext>
        <Binding Source="{StaticResource ViewModelLocator}" Path="NewClientWindowVM"></Binding>
    </Window.DataContext>
    <Grid>
        <UniformGrid Grid.Column="0" Columns="2">
            <Label VerticalAlignment="Center" HorizontalAlignment="Right">Identifier</Label>
            <TextBox VerticalAlignment="Center" x:Name="IdTextBox" Text="{Binding Path=Identifier}"/>
            <Label VerticalAlignment="Center" HorizontalAlignment="Right">Name</Label>
            <TextBox VerticalAlignment="Center" x:Name="NameTextBox" Text="{Binding Path=Name}"/>
            <Button Command="{Binding AddClient, Mode=OneWay}">Kunde erstellen</Button>
        </UniformGrid>
    </Grid>
</Window>
